{
  "name": "railji-workspace",
  "version": "1.0.0",
  "description": "Railji Backend Monorepo Workspace",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/railji-business",
    "apps/railji-dashboard",
    "libs/shared"
  ],
  "scripts": {
    "build:shared": "cd libs/shared && npm run build",
    "build:business": "cd apps/railji-business && npm run build",
    "build:dashboard": "cd apps/railji-dashboard && npm run build",
    "build": "npm run build:shared && npm run build:business && npm run build:dashboard",
    "start:business": "npm run build:shared && npm run build:business && cd apps/railji-business && npm run start:prod",
    "start:dashboard": "npm run build:shared && npm run build:dashboard && cd apps/railji-dashboard && npm run start:prod",
    "dev:business": "cd apps/railji-business && npm run start:dev",
    "dev:dashboard": "cd apps/railji-dashboard && npm run start:dev",
    "lint": "npm run lint:business && npm run lint:dashboard",
    "lint:business": "cd apps/railji-business && npm run lint",
    "lint:dashboard": "cd apps/railji-dashboard && npm run lint",
    "test": "npm run test:business && npm run test:dashboard",
    "test:business": "cd apps/railji-business && npm run test",
    "test:dashboard": "cd apps/railji-dashboard && npm run test",
    "format": "npm run format:business && npm run format:dashboard",
    "format:business": "cd apps/railji-business && npm run format",
    "format:dashboard": "cd apps/railji-dashboard && npm run format"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.10",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.10",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
